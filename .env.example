# ==================================
# API Keys
# ==================================

# The Racing API (Australian racing data)
RACINGAPI_USERNAME=your_racing_api_username
RACINGAPI_PASSWORD=your_racing_api_password

# TheOddsAPI (Sports odds)
THEODDSAPI_KEY=your_theodds_api_key

# Anthropic Claude API (AI analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ==================================
# Supabase Configuration
# ==================================

# Frontend (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Backend (service role for admin access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key

# Direct database connection (optional)
DATABASE_URL=postgresql://user:password@host:5432/database

# ==================================
# Database (if using local Postgres)
# ==================================
POSTGRES_USER=tipping
POSTGRES_PASSWORD=tipping_dev
POSTGRES_DB=tipping_aggregator

# ==================================
# Application Settings
# ==================================

# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
PYTHON_ENV=development
ENVIRONMENT=development

# Admin
ADMIN_PASSWORD=admin123

# ==================================
# Worker Settings
# ==================================

# How often to run aggregation (cron format)
WORKER_SCHEDULE="0 */2 * * *"  # Every 2 hours

# Redis connection
REDIS_URL=redis://localhost:6379/0

# ==================================
# Affiliate Settings
# ==================================

# Your domain for affiliate redirects
AFFILIATE_DOMAIN=https://yourdomain.com

# Affiliate IDs
SPORTSBET_AFFILIATE_ID=your_sportsbet_id
LADBROKES_AFFILIATE_ID=your_ladbrokes_id
NEDS_AFFILIATE_ID=your_neds_id
TAB_AFFILIATE_ID=your_tab_id

# ==================================
# Scraping Configuration
# ==================================

# Target websites (comma-separated)
SCRAPING_TARGETS=https://www.racing.com/tips,https://www.skyracing.com.au/tips

# Rate limiting
SCRAPE_DELAY_SECONDS=2
MAX_CONCURRENT_SCRAPES=3
